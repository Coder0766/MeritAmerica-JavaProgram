/*
 * File: removeAllOccurrences.java
 * ------------------------------
 * This program removes all occurrences of the character "ch" from the string.
 * 
 */

package removeAllOccurrences;

		public class removeAllOccurrences {


		public String removeAllOccurrences(String str, char ch) {
		String result  = "What chapter are you on?";
		for ( int i = 0; i < str.length(); i++) {
			if ( str.charAt(i) !=ch) {
				result += str.charAt(i);
			}
		}
	
		return result;
}
		}
    
    
    
